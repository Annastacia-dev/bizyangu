<%= form_with(model: (defined?(expense) ? expense : Expense.new), class: "contents", data: { controller: "expense" }) do |f| %>
  <div class="flex flex-col gap-5 lg:w-1/2 my-5">
    <div class="flex flex-col gap-1">
      <%= f.label :expense_item %>
      <%= f.select :expense_item, options_for_select(ExpenseItem.all.map { |item| [item.title, item.id, { data: { amount: item.amount } }] }, selected: (defined?(expense) ? expense.expense_item_id : nil)), {}, class: "select-field", data: { expense_target: "select" } %>
    </div>

    <div class="flex flex-col gap-1">
      <%= f.label :amount %>
      <%= f.number_field :amount, value: (defined?(expense) ? expense.amount : nil), class: "text-field", data: { expense_target: "amount" }, required: true %>
    </div>

    <% if @day %>
      <%= f.hidden_field :date, value: @day.date %>
    <% else %>
      <div class="flex flex-col gap-2">
        <%= f.label :date, class: 'form-label' do %>
          <span> date </span>
          <span class="text-red-500">*</span>
        <% end %>
        <%= f.date_field :date, class: "text-field", max: Date.today.strftime('%Y-%m-%d'), required: true %>
      </div>
    <% end %>

    <div class="flex gap-5">
      <%= f.submit class: "btn-primary" %>
    </div>
  </div>
<% end %>
