<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'flex flex-col gap-8'}) do |f| %>
  <div class="flex flex-col gap-2">
    <%= f.label :email, class: 'capitalize text-sm font-medium' do %>
      <span> email </span>
      <span class="text-red-500">*</span>
    <% end %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-600 outline-none px-2 py-2 bg-transparent text-sm rounded", required: true %>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :password, class: 'capitalize text-sm font-medium' do %>
      <span> password </span>
      <span class="text-red-500">*</span>
    <% end %>
    <%= f.password_field :password, autocomplete: "current-password", class: "border border-gray-600 outline-none px-2 py-2 bg-transparent text-sm rounded", required: true %>
  </div>

  <%= f.submit "Log in", class: "btn-secondary" %>
<% end %>