<div class="grid lg:grid-cols-6 md:grid-cols-3 grid-cols-2 gap-4">
 <% cards.each do |card| %>
  <%= link_to card[:path], class: "bg-secondary/50 shadow-lg rounded p-5 flex lg:flex-row justify-between flex-col gap-4 hover:bg-secondary/30 text-primary" do %>
    <div class="text-sm font-medium  flex gap-2 items-center">
      <i class="<%= card[:icon] %>"></i>
      <p><%= card[:title] %></p>
    </div>
    <p class="text-5xl font-bold"><%= card[:data] %></p>
  <% end %>
 <% end %>
</div>