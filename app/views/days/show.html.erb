<div class="flex flex-col gap-5 min-h-screen pb-10 mx-auto container">

  <%= render 'components/breadcrumb', breadcrumbs: [
    { text: 'home', path: root_path },
    { text: "#{formatted_date @day.date}"}
  ] %>

  <div class="flex md:flex-row flex-col justify-end md:items-center gap-3 px-4">
    <%= render 'components/dropdown', title: 'actions', icon_class: "fa-solid fa-caret-down", items: day_links %>
  </div>

  <div class="grid lg:grid-cols-4 md:grid-cols-2 gap-4">
    <%= render 'cards' %>
   </div>
</div>
